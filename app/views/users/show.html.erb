<div class="container mt-5">

  <%= render 'layouts/navbar_users.html.erb' %>

  <div class="row justify-content-center">
    <!--<div class="col-3">-->
    <!--  <%#= render 'layouts/sidebar/sidebar_users.html.erb'  %>-->
    <!--</div>-->

    <div class="col-6">
      <% if @user.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="jumbotron">
        <h2 class="text-center font-weight-bold">ユーザー情報編集</h1>
        <%= form_for(@user) do |f| %>
          <div class="form-group">
            <%= f.label :nickname, "名前" %>
            <%= f.text_field :nickname, placeholder: "名前を入力して下さい",
                                         class: "form-control" %>
          </div>
    
          <div class="form-group">
            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email, placeholder: "sample@sample.com",
                                         class: "form-control" %>
          </div>
    
          <div class="form-group">
            <%= f.label :birthday, "誕生日" %>
            <%= f.text_field :birthday, placeholder: "YYYY/MM",
                                         class: "form-control" %>
          </div>
    
          <div class="form-group">
            <%= f.label :introduction, "自己紹介" %>
            <%= f.text_area :introduction, rows: "5",
                                           placeholder: "200文字以内で入力して下さい",
                                           class: "form-control" %>
          </div>
    
            <%= f.submit "-編集-", class:"btn btn-primary btn-block" %>
        <% end %>
      </div>

      <div class="row justify-content-center mb-5">
        <%= link_to "退会", confirm_user_path(current_user), class: "btn btn-secondary btn-sm mt-4"%>
      </div>
    </div>

  </div>
</div>
