<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>

<div class="row justify-content-center">
  <div class="col-4">
    <div class="card border-secondary text-white text-center" style="height: 36em;">
      <div class="card-header font-weight-bold" style="background-color:#00008b;">
        ユーザー情報
      </div>
      <div class="card-body">
        <ul class="list-group list-group-flush text-dark">
          <li class="list-group-item">
            <p class="small text-secondary">名前</p>
            <%= @user.nickname %>
          </li>
          <li class="list-group-item">
            <p class="small text-secondary">ID</p>
            <%= @user.name_code %>
          </li>
          <li class="list-group-item">
            <p class="small text-secondary">email</p>
            <%= @user.email %>
          </li>
          <li class="list-group-item">
            <p class="small text-secondary">誕生日</p>
            <%= @user.birthday %>
          </li>
          <li class="list-group-item">
            <p class="small text-secondary">自己紹介</p>
            <%= @user.introduction %>
          </li>
        </ul>
        <%= link_to "編集", edit_user_path(@user), class: "btn btn-secondary btn-sm mt-4"%>
      </div>
    </div>
  </div>
</div>
