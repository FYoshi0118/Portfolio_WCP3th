<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-5">
      <% if @user.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="jumbotron">
        <h1 class="text-center font-weight-bold">登録情報編集</h1>
        <%= form_for(@user) do |f| %>
          <div class="form-group">
            <%= f.label :nickname, "名前" %>
            <%= f.text_field :nickname, placeholder: "名前を入力して下さい",
                                         class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email, placeholder: "sample@sample.com",
                                         class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :birthday, "誕生日" %>
            <%= f.text_field :birthday, placeholder: "YYYY/MM",
                                         class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :introduction, "自己紹介" %>
            <%= f.text_field :introduction, placeholder: "200文字以内で入力して下さい",
                                         class: "form-control" %>
          </div>

          <%= f.submit "-編集-", class:"btn btn-primary btn-block" %>
        <% end %>

      </div>
    </div>
  </div>
</div>


<div class="container-fluid">
  <div class="row justify-content-center">

    <div class="col-10 py-4">
      <div class="row justify-content-center">
        <div class="col-6">

          <div class="jumbotron">
            <h1 class="text-center font-weight-bold">登録情報編集</h1>

            <%= form_for(@user) do |f| %>

 

              <%= f.submit "-変更-", class:"btn btn-warning btn-block" %>

            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
