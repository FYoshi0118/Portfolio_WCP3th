<div class="container-fluid">
  <div class="row">
    <!--サイドバー-->
    <nav class="col-md-2 d-none d-md-block bg-light sidebar">
      <%= render 'layouts/sidebar/sidebar_admins.html.erb' %>
    </nav>

    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
				<h2>蔵元一覧</h2>
				<div class="btn-toolbar mb-2 mb-md-0">
					<div class="btn-group mr-2">
						<button class="btn btn-sm btn-outline-secondary">シェア</button>
						<button class="btn btn-sm btn-outline-secondary">輸出</button>
					</div>
					<button class="btn btn-sm btn-outline-secondary dropdown-toggle">
						今週
					</button>
				</div>
			</div>
			<div class="table-responsive">
				<table class="table table-striped table-sm">
					<thead>
						<tr>
							<th>蔵元名</th>
							<th>郵便番号</th>
							<th>住所</th>
							<th>電話番号</th>
							<th>確認フラグ</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
					  <% @breweries.each do |brewery| %>
  						<tr>
  							<td><%= brewery.name %></td>
  							<td><%= brewery.post_code %></td>
  							<td><%= brewery.address %></td>
  							<td><%= brewery.phone_number %></td>
  							<% if brewery.is_confirmed == true  %>
    							<td class="text-succcess">確認済み</td>
    						<% elsif brewery.is_confirmed == false %>
    						  <td class="text-danger">未確認</td>
    						<% end %>
    						<td><%= link_to "詳細・編集", edit_admin_brewery_path(brewery.id), class: "text-info" %></td>
  						</tr>
  					<% end %>
					</tbody>
				</table>
			</div>
    </main>

  </div>
</div>
