<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-3">
      <%= render 'layouts/sidebar/sidebar_users.html.erb'  %>
    </div>

    <div class="col-8">
      <h4 class="d-flex justify-content-center">
        <span class="text-muted">投稿一覧</span>
      </h4>
      <% @user.posts.each do |post| %>
        <table class="table table-sm table-striped"  style="table-layout: fixed; overflow: hidden;">
          <thead>
          </thead>
          <tbody>
            <tr>
              <th scope="row">
                <%= post.updated_at.strftime('%Y/%m/%d　%H:%M:%S') %>.
              </th>
              <td>
                <%= "ここは投稿画像" %>
              </td>
              <td>
                <%= post.sake.brand %> 
              </td>
              <td>
                <%= post.sake.brewery.name %> 
              </td>
              <td>
                <%= post.star %> 
              </td>
              <td>
                <%= link_to '詳細', edit_post_path(post.id) %>
                <div></div>
                <%= link_to '削除', post_path(post.id), method: :delete,
                                                        data: {confirm: "本当に削除しますか？"} %>
              </td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>  

  </div>
</div>